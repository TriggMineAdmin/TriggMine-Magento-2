<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Event/etc/events.xsd">
    <event name="customer_register_success">
        <observer name="tm_customer_register_success" instance="Triggmine\Connector\Observer\Customer\CustomerRegisterSuccess"/>
    </event>
    <event name="customer_login">
        <observer name="tm_customer_login" instance="Triggmine\Connector\Observer\Customer\CustomerLogin"/>
    </event>
    <event name="customer_logout">
        <observer name="tm_customer_logout" instance="Triggmine\Connector\Observer\Customer\CustomerLogout"/>
    </event>
    <event name="catalog_controller_product_init_after">
        <observer name="tm_page_init" instance="Triggmine\Connector\Observer\Page\PageInit"/>
    </event>
    <event name="checkout_cart_save_after">
        <observer name="tm_checkout_cart_save_after" instance="Triggmine\Connector\Observer\Cart\CheckoutCartSaveAfter"/>
    </event>
</config>